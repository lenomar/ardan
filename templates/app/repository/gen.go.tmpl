	if sess == nil {
		sess = r.NewSession()
		defer sess.Close()
	}
	if item.ID == "" {
		return {{.Setting.Model}}.ErrPKNotFound
	}
	sess = sess.ID(item.ID)
	if len(cols) > 0 {
		sess = sess.Cols(cols...)
	} else {
		sess = sess.AllCols()
	}
