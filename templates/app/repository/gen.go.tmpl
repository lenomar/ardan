// Paged 获取分页列表
func (r *{{.Name}}Repository) Paged(sess *xorm.Session, base *query.Base, opts ...SessionOptions) ([]*{{.Setting.Model}}.{{.Name}}, int64, error) {
	var items []*{{.Setting.Model}}.{{.Name}}
	var totals int64
	var err error
	if sess == nil {
		sess = r.NewSession()
		defer sess.Close()
		sess = sess.OrderBy("id desc")
	}
	// query
	sess = base.Options(sess)
	// options
	for _, opt := range opts {
		opt.Options(sess)
	}
	totals, err = sess.FindAndCount(&items)
	if err != nil {
		return nil, totals, err
	}

	return items, totals, err
}

