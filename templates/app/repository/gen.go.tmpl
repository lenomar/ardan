// Get get an item from database
func (r *{{.Name}}Repository) Get(sess *xorm.Session, id string, unscoped bool) (*{{.Setting.Model}}.{{.Name}}, error) {
	var item {{.Setting.Model}}.{{.Name}}
	if sess == nil {
		sess = r.NewSession()
		defer sess.Close()
	}
	if id == "" {
		return nil, {{.Setting.Model}}.ErrPKNotFound
	}
	sess = sess.ID(id)
	if unscoped {
		sess = sess.Unscoped()
	}
	has, err := sess.Get(&item)
