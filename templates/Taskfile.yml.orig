# https://taskfile.dev

version: '2'

vars:
  Product: 'ardan'

tasks:
  default:
    desc: "default task"
    cmds:
      - echo "{{.Product}}"
      - task: run
    silent: true

  run:
    desc: "go run server"
    dir: cmd/server/
    cmds:
      - echo "server run "
      - go run main.go
    silent: true

  sync:
    desc: "model sync"
    cmds:
      - echo "model sync"
      - ardan sync
    silent: true
 
  gen:
    desc: "ardan gen"
    cmds:
      - echo "ardan.gen repository|service|controller"
      - ardan gen
    silent: true
 
  release:
    desc: "release"
    cmds:
      - echo "release generating..."
      - GOOS=linux go build -ldflags "-w -s" -o ./release/{{.Product}} ./cmd/server/main.go
      - echo "release generated."
    silent: true

